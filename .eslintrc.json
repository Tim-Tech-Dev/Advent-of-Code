{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "root": true,
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "eqeqeq": ["warn"]
    }
}
